<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/playNowFragmentLayout"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:id="@+id/rcvLayoutCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPagerBanner"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@drawable/img_gradient_color"
                    android:paddingStart="50dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="50dp"
                    android:paddingBottom="25dp" />

                <me.relex.circleindicator.CircleIndicator3
                    android:id="@+id/ciBanner"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    app:ci_width="12dp"
                    app:ci_height="2dp"
                    app:ci_margin="5dp"
                    app:ci_drawable="@drawable/cm_spot_pink_corner"
                    app:ci_drawable_unselected="@drawable/cm_spot_grey_corner"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_b" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NGHE NGAY"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                android:paddingBottom="10dp"
                android:paddingStart="10dp"
                android:paddingTop="15dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvCategory1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Có thể bạn muốn nghe"
                    android:paddingTop="10dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingStart="10dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvCategory1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvCategory2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lựa chọn hôm nay"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:paddingStart="10dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvCategory2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvCategory3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chill"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:paddingStart="10dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvCategory3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvCategory4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Album nổi bật"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:paddingStart="10dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvCategory4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>